SELECT *
FROM chinook.employees

SELECT *
FROM chinook.customers

customer full name, customer id, country not in US
SELECT FirstName, LastName, CustomerID, Country
FROM chinook.customers
WHERE Country != 'USA';

-----------------------------------------------------

Show customers from Brazil
SELECT *
FROM chinook.customers
WHERE country = 'Brazil'

------------------------------------------------------


SELECT *
FROM chinook.invoices

Find invoices from customers who are from brazil. full name, invoice ID, date inovoice, billing country

SELECT customers.FirstName, customers.LastName, invoices.InvoiceId, invoices.InvoiceDate, invoices.BillingCountry
FROM chinook.invoices invoices
LEFT JOIN chinook.customers customers
ON customers.CustomerID = invoices.CustomerID
WHERE invoices.BillingCountry = 'Brazil'

------------------------------------------------------

SELECT *
FROM chinook.employees
WHERE Title = 'Sales Support Agent'

---------------------------------------------

Show the name of the person each employee reports to
SELECT employee.EmployeeId, employee.FirstName, employee.LastName, employee.ReportsTo, manager.FirstName, manager.LastName
FROM chinook.employees employee
LEFT OUTER JOIN chinook.employees Manager
ON employee.ReportsTo = Manager.EmployeeId

----------------------------------------------------------


SELECT *
FROM chinook.invoices

SELECT *
FROM chinook.customers

SELECT *
FROM chinook.employees



SELECT emp.LastName, emp.Firstname, inv.InvoiceId
FROM chinook.Employees emp 
JOIN chinook.Customers cust ON cust.SupportRepId = emp.EmployeeId
JOIN chinook.Invoices Inv ON Inv.CustomerId = cust.CustomerId;


---------------------

invoice total, customer name, country, sales agent for all invoices and customers

SELECT *
FROM chinook.invoices - InvoiceId, CustomerId, BillingCountry

SELECT *
FROM chinook.invoice_items - need InvoiceId - Quantity*UnitPrice

SELECT *
FROM chinook.customers

SELECT *
FROM chinook.employees

SELECT emp.LastName, emp.Firstname, cust.FirstName, cust.LastName, cust.Country, inv.total
FROM chinook.employees emp 
JOIN chinook.Customers cust ON cust.SupportRepId = emp.EmployeeId
JOIN chinook.Invoices Inv ON Inv.CustomerId = cust.CustomerId;


----

how many invoices in 2009
SELECT COUNT(*)
FROM chinook.invoices
WHERE InvoiceDate LIKE '%2009%'

SELECT COUNT(*)
FROM chinook.Invoices
WHERE InvoiceDate BETWEEN '2009-01-01' AND '2009-12-31';

---------------------------------------

track name for each invoice line ID

SELECT *
FROM chinook.invoice_items

SELECT *
FROM chinook.invoices

SELECT *
FROM chinook.tracks

SELECT  invoices.InvoiceId, items.InvoiceLineId, tracks.Name
FROM chinook.tracks tracks
JOIN chinook.invoice_items items ON items.TrackId = tracks.TrackId
JOIN chinook.invoices invoices ON invoices.InvoiceId = items.InvoiceId

----------------

total sales 2009

SELECT SUM(Total)
FROM chinook.invoices
WHERE InvoiceDate LIKE '%2009%'

